Class ModernPlasmaBall : BD_Plasmaball
{
Default {
	BD_Plasmaball.pcolor "green";
	Radius 8;
	Height 8;
	Speed 50;
	Damage 0;
	missiletype "ModernFlarePlasmaTrail";
	missileheight 8 ;
	decal "ArachnotronPlasmaSplat";
	+DONTTHRUST
	+FORCERADIUSDMG
	renderstyle "Add";
	scale 0.03;
	alpha 1.0;
	SeeSound "Mweapons/plasma/fire";
	DeathSound "weapons/plasmax";
	}
States
	{
	Spawn:
		TNT1 A 0 NoDelay {
			if (bdoom_debris == 1)
				A_SpawnItemEx("BD_PlasmaFlare",0,0,0,vel.x,vel.y,vel.z,0,SXF_SETMASTER|SXF_ORIGINATOR|SXF_ABSOLUTEVELOCITY);
			A_PlaySound("Mweapons/plasma/loop",5,0.6,1,3);
			}
		COIS ABCDEFGHIJKLMNO 1 bright;
		goto spawn+1;
	Death:
		TNT1 A 0 {
			A_StopSound(5);
			if (pcolor == "green")
				A_SetTranslation("GreenPlasma");
			A_RemoveChildren(1,RMVF_EVERYTHING);
			A_Explode(30,40,0,0,40,0,0,"none");
			A_SetScale(0.14*randompick(-1,1),0.14*randompick(-1,1));
			for (int i = 0; i <= 8; i++)
				A_SpawnItemEx("ModernPlasmaPiece",0,0,0,frandom(-3,3),frandom(-3,3),frandom(3,8),0,0,32);
			}
		PEXP CDEFGH 1 bright {
			A_CustomRailGun(0,0,"null","0",RGF_SILENT|RGF_NOPIERCING|RGF_CENTERZ,0,4,"NullPuff",random(0,360),random(0,360),32,64,0,0,"MPlasmaBallRay");
			A_CustomRailGun(0,0,"null","0",RGF_SILENT|RGF_NOPIERCING|RGF_CENTERZ,0,4,"NullPuff",random(0,360),random(0,360),32,64,0,0,"MPlasmaBallRay");
