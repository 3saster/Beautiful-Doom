Class BD_PlasmaRifle : BDoomWeapon replaces Plasmarifle
{
double HeatCounter;
Default {
	Weapon.SelectionOrder 10;
	Inventory.PickupMessage "$GOTPLASMA";
	Tag "$TAG_PLASMARIFLE";
	inventory.pickupsound "pickups/plasmarifle";
	attacksound "weapons/plasma/railgun";
	Weapon.AmmoType 	"Cell";
	Weapon.AmmoUse 		1;
	Weapon.AmmoGive 		40;
	Weapon.ammotype2 		"Cell";
	weapon.ammouse2		20;
	weapon.ammogive2 	0;
	decal "PlasmaRailSplat";
	weapon.slotnumber 6;
	}
override void DoEffect () {
	super.DoEffect();
	if (owner && bdoom_weapons == 2 && heatcounter > 0)
		heatcounter -= 0.02;
	}
states
	{
	Spawn:
		PLAS A 1 NoDelay A_JumpIf(bdoom_weapons == 2, "Spawn.Modern");
		loop;
	Spawn.Modern:
		PLAZ ABCDEFGHIJKLMNO 1 A_JumpIf(bdoom_weapons != 2, "Spawn");
		loop;
	Select:
		TNT1 A 0 A_JumpIf(bdoom_weapons == 2,"Select.Modern");
		TNT1 A 0 {
			If(bdoom_weapons == 1)
				A_PlaySound("weapons/plasma/draw");
			}
		//TNT1 AAAAAAAA 0 A_Raise;
		PLGS ABCDEF 1 A_WeaponReady(WRF_NOFIRE);
		goto ready;
	Deselect:
		TNT1 A 0 {
			A_ClearRefire();
			A_StopSound(6);
			A_ClearOverlays(5,7);
			}
		TNT1 A 0 A_JumpIf(bdoom_weapons == 2,"DeSelect.Modern");
		TNT1 A 0 A_JumpIf(bdoom_weapons == 1,"Deselect.Enhanced");
		PLGG A 1 A_lower;
		loop;
	Ready:
		TNT1 A 0 A_JumpIf(bdoom_weapons == 2,"Ready.Modern");
		TNT1 A 0 A_ClearOverlays(5,7);
		PLGG A 1 {
			if (bdoom_weapons == 0)
				A_WeaponReady(WRF_NOSECONDARY);
			else
				A_WeaponReady();
			}
		loop;
	fire:
		TNT1 A 0 A_JumpIf(bdoom_weapons == 2,"Fire.Modern");
		PLGF A 3 {
			A_FireProjectile("BD_Plasmaball",0,1);
			A_GunFlash("Flash1");
			}
		TNT1 A 0 A_refire("fire2");
		goto FireEnd;
	fire2:
		PLGF B 3 {
			A_FireProjectile("BD_Plasmaball",0,1);
			A_GunFlash("Flash2");
			}
		TNT1 A 0 A_refire("fire3");
		goto FireEnd;
	fire3:
		PLGF C 3 {
			A_FireProjectile("BD_Plasmaball",0,1);
			A_GunFlash("Flash3");
			}
		TNT1 A 0 A_refire("fire");
	FireEnd:
		PLGC BCD 1;
		TNT1 A 0 {
			If(bdoom_weapons == 1)
				A_PlaySound("weapons/plasma/cool");
			}
		PLGC EEEEEEEEEEEEE 1 {
			If(bdoom_debris == 1)
				A_SpawnItemEx("WeaponSmoke",cos(pitch)*25,random(-8,-16),sin(-pitch)*25+random(32,40),0,0,1,0);
			}
		PLGC DCBA 1;
		goto ready;
	Flash1:
		TNT1 A 0 A_Jump(256,1,4,7,10);
		PLZ1 ABC 1 bright A_light1();
		goto lightdone;
		PLZ1 BCD 1 bright A_light1();
		goto lightdone;
		PLZ1 CDE 1 bright A_light1();
		goto lightdone;
		PLZ1 DEF 1 bright A_light1();
		goto lightdone;
	Flash2:
		TNT1 A 0 A_Jump(256,1,4,7,10);
		PLZ2 ABC 1 bright A_light1();
		goto lightdone;
		PLZ2 BCD 1 bright A_light1();
		goto lightdone;
		PLZ2 CDE 1 bright A_light1();
		goto lightdone;
		PLZ2 DEF 1 bright A_light1();
		goto lightdone;
	Flash3:
		TNT1 A 0 A_Jump(256,1,4,7,10);
		PLZ3 ABC 1 bright A_light1();
		goto lightdone;
		PLZ3 BCD 1 bright A_light1();
		goto lightdone;
		PLZ3 CDE 1 bright A_light1();
		goto lightdone;
		PLZ3 DEF 1 bright A_light1();
		goto lightdone;

// ENHANCED
	Deselect.Enhanced:
		PLGG A 1 A_lower(12);
		loop;
	AltFire:
		TNT1 A 0 A_JumpIf(bdoom_weapons == 2,"Altfire.Modern");
		PLGG A 6 A_PlaySound("weapons/plasma/charge");
		PLGF AB 4 bright;
		PLGF C 5 bright {
			A_GunFlash("Flash3");
			A_RailAttack(25*random(10,25),0,1,"","0",RGF_NOPIERCING,2,"PlasmaRailPuff",0,0,0,0,0,0,"PlasmaRailBall");
			}
		PLGC BCD 1 {
			If(bdoom_weapons == 1)
				A_SpawnItemEx("WeaponSmoke",cos(pitch)*25,random(0,-6),sin(-pitch)*25+random(24,36),		0,0,1,0);
			}
		TNT1 A 0 A_Playsound("weapons/plasma/cool");
		PLGC EEEEEEEEEEEEEEE 1 {
			If(bdoom_weapons == 1)
				A_SpawnItemEx("WeaponSmoke",cos(pitch)*25,random(-8,-16),sin(-pitch)*25+random(32,40),		0,0,1,0);
			}
		PLGC DDCCBBAA 1 {
			If(bdoom_weapons == 1)
				A_SpawnItemEx("WeaponSmoke",cos(pitch)*25,random(0,-10),sin(-pitch)*25+random(24,36),		0,0,1,0);
			}
		PLGG AAA 1 {
			If(bdoom_weapons == 1)
				A_SpawnItemEx("WeaponSmoke",cos(pitch)*25,random(3,-3),sin(-pitch)*25+random(24,36),		0,0,1,0);
			}
		goto ready;

// MODERN
	Select.Modern:
		TNT1 A 0 A_PlaySound("Mweapons/plasma/select");
		//TNT1 AAAAAAAA 0 A_Raise;
		PLGS ABCDEF 1 A_WeaponReady;
		goto ready;
	Deselect.Modern:
		PLGG AAA 1 A_lower(12);
		TNT1 A 0 A_ClearOverlays(5,7);
		PLGG A 1 A_lower(12);
		wait;
	Ready.Modern:
		PLGG A 1 {
			let p1 = Player.FindPSprite(5);
			let p2 = Player.FindPSprite(6);
			if (!p1) {
				A_Overlay(5,"HeatUnderlay",0);
				A_OverlayOffset(5,0.0,0.0,WOF_INTERPOLATE);
				}
			if (!p2) {
				A_Overlay(6,"Heat",0);
				A_OverlayOffset(6,0.0,0.0,WOF_INTERPOLATE);
				}
			if (invoker.heatcounter > 0)
				A_WeaponReady(WRF_ALLOWUSER1|WRF_ALLOWRELOAD);
			else
				A_WeaponReady(WRF_ALLOWUSER1|WRF_NOSECONDARY);
			}
		goto ready;
	HeatScreenReady: //smooth blueish glow showing there's no heat
		PLHE YXWVWX 2 bright A_JumpIf(invoker.heatcounter > 0, "Heat");
		loop;
	HeatUnderlay: //the background of the heat screen
		PLHE Z 1;
		loop;
	Heat:
		TNT1 A 0 A_JumpIf(invoker.heatcounter <= 0,"HeatScreenReady");
		PLHE A 1 bright {
			let po = player.findPsprite(6);
			int heat = clamp(invoker.heatcounter,1,9) - 1;
			//po.sprite = GetSpriteIndex("PLHE");
			po.frame = heat;
			}
		loop;
	loadsprites:
		PLHE ABCDEFGHI 10;
		stop;
	Reload:
	AltFire.Modern:
		TNT1 A 0 {
			A_OverlayOffset(5,0.0,0.0,WOF_INTERPOLATE);
			A_OverlayOffset(6,0.0,0.0,WOF_INTERPOLATE);
			if (invoker.heatcounter > 10)
				invoker.heatcounter = 10;
			A_Overlay(7,"SteamFast",0);
			A_OverlayRenderstyle(7,STYLE_Add);
			A_OverlayFlags(7,PSPF_ALPHA,true);
			A_OverlayAlpha(7,0.1);
			A_PlaySound("Mweapons/plasma/steamfast");
			}
		PLGG A 2 { 
			if (invoker.heatcounter > 0)
				invoker.heatcounter -= 1.0; 
			else
				return ResolveState("Ready");
			return ResolveState(null);
			}
		wait;
	SteamFast:
		PSTM ABCDEFGHIJKLMNOPQRSTUVWX 1;
		stop;
	SteamSlow:
		PSTM ABCDEFGHIJKLMNOPQRSTUVWX 2;
		stop;
	ForcedCool:
		PLGG A 8 {
			A_OverlayOffset(5,0.0,0.0,WOF_INTERPOLATE);
			A_OverlayOffset(6,0.0,0.0,WOF_INTERPOLATE);
			A_PlaySound("Mweapons/plasma/alarm");
			A_ClearRefire();
			}
		TNT1 A 0 {
			if (invoker.heatcounter > 10)
				invoker.heatcounter = 10;
			A_Overlay(7,"SteamSlow",0);
			A_OverlayRenderstyle(7,STYLE_Add);
			A_OverlayFlags(7,PSPF_ALPHA,true);
			A_OverlayAlpha(7,0.1);
			A_PlaySound("Mweapons/plasma/steamslow");
			}
		PLGG A 5 { 
			if (invoker.heatcounter > 0)
				invoker.heatcounter -= 1.0; 
			else
				return ResolveState("Ready");
			return ResolveState(null);
			}
		wait;
	fire.Modern:
		TNT1 A 0 A_JumpIf(invoker.heatcounter >= 10, "ForcedCool");
		PLGF A 1 { 
			invoker.HeatCounter+=0.5;
			A_FireProjectile("ModernPlasmaball",frandom(-1.8,1.8),1,0,0,0,frandom(-1.5,1.5));
			//A_SetPitch(pitch - 0.1,SPF_INTERPOLATE);
			A_OverlayOffset(5,0.0,0.0,WOF_INTERPOLATE);
			A_OverlayOffset(6,0.0,0.0,WOF_INTERPOLATE);
			A_GunFlash("Flash.Modern");
			}
		PLGF B 1 {
			A_OverlayOffset(5,0.0,2.2,WOF_INTERPOLATE);
			A_OverlayOffset(6,0.0,2.2,WOF_INTERPOLATE);
			}
		PLGF C 1 {
			A_OverlayOffset(5,0.0,1.7,WOF_INTERPOLATE);
			A_OverlayOffset(6,0.0,1.7,WOF_INTERPOLATE);
			}
		PLGF B 1{
			A_OverlayOffset(5,0.0,3.2,WOF_INTERPOLATE);
			A_OverlayOffset(6,0.0,3.2,WOF_INTERPOLATE);
			}
		TNT1 A 0 A_ReFire;
		PLGG AAA 1 {
			A_OverlayOffset(5,0.0,0.0,WOF_INTERPOLATE);
			A_OverlayOffset(6,0.0,0.0,WOF_INTERPOLATE);
			if (bdoom_debris == 1)
				A_SpawnItemEx("WeaponSmoke",cos(pitch)*25,random(-2,2),sin(-pitch)*25+random(33,36),		0,0,1,0);
			}
		goto ready;
	Flash.Modern:
		YLZ1 A 1 bright {
			A_light1();
			let po = player.FindPSprite(PSP_FLash);
			po.frame = random (0,5);
			}
		YLZ2 A 1 bright {
			A_light1();
			let po = player.FindPSprite(PSP_FLash);
			po.frame = random (0,5);
			}
		YLZ3 A 1 bright {
			A_light1();
			let po = player.FindPSprite(PSP_FLash);
			po.frame = random (0,5);
			}
		goto lightdone;
	}
}

Class BD_Plasmaball : FastProjectile  replaces Plasmaball
{
name pcolor;
property pcolor : pcolor;
Default {
	BD_Plasmaball.pcolor "blue";
	Radius 13;
	Height 8;
	Speed 25;
	Damage 5;
	Obituary "$OB_MPPLASMARIFLE"; // "%o was melted by %k's plasma gun.";
	missiletype "BD_PlasmaTrail";
	missileheight 8;
	damagetype "PlasmaDamage";
	+FORCEXYBILLBOARD
	+THRUGHOST
	+NOEXTREMEDEATH
	+BLOODLESSIMPACT
	decal "BluePlasmaSplat";
	renderstyle "Add";
	scale 0.045;
	alpha 1.0;
	SeeSound "none";
	DeathSound "weapons/plasmax";
	}
States
	{
	Spawn:
		TNT1 A 0 NoDelay {
			A_SetScale(scale.x*randompick(-1,1),scale.y*randompick(-1,1));
			if(bdoom_weapons == 0)
				A_PlaySound("weapons/plasmaf",5,1.0);
			else if(bdoom_weapons == 1)
				A_PlaySound("weapons/plasma/fire",5,1.0);
			else if (bdoom_weapons == 2) //this is only used by Arachnotron, since the player uses a different plasmaball when using Modern guns
				A_PlaySound("Mweapons/plasma/fire",5,1.0);
			if (bdoom_debris)
				A_SpawnItemEx("BD_PlasmaFlare",0,0,0,vel.x,vel.y,vel.z,0,SXF_SETMASTER|SXF_ORIGINATOR|SXF_ABSOLUTEVELOCITY);
			}
		COIL ABCDEFGHIJKLMNO 1 bright;
		goto spawn+1;
	Death:
		TNT1 A 0 {
			A_RemoveChildren(1,RMVF_EVERYTHING);
			if (bdoom_debris == 1)
				A_SpawnItem("WeaponSmoke");
			}
		TNT1 AAAAAAAAAAAA 0 {
			if (bdoom_debris == 1)
				A_spawnItemEx("BluePlasmaPiece",0,0,0,frandom(-3,3),frandom(-3,3),frandom(3,6),random(0,360),SXF_TRANSFERTRANSLATION);
			}
		TNT1 A 0 A_SetScale(0.2*randompick(-1,1),0.2*randompick(-1,1));
		PEXP ABCDEFGHIJKLM 2 bright A_FadeOut(0.05);
		stop;
	}
}

class BDPExtensions {
    static int GetTranslationID (name transname) {
        return Translation.GetID (transname);
    }
}

//flare around the plasmaball
Class BD_PlasmaFlare : Flare_General
{
Default {
	renderstyle "Add";
	alpha 0.4;
	scale 0.1;
	}
states
	{
	Spawn:
		LENB A 0 NoDelay {
			A_Warp(AAPTR_MASTER);
			if (master) {
				let pls = BD_Plasmaball(master);
				if (pls.pcolor == "green")
					sprite = GetSpriteIndex("LENG");
				else if (pls.pcolor == "red")
					sprite = GetSpriteIndex("LENR");
				else if (pls.pcolor == "yellow")
					sprite = GetSpriteIndex("LENY");
				}
			}
		#### A 1 bright {
			if (!master)
				self.destroy();
			}
		wait;
	}
}

//appears behind the plasmaball as a fading out trail
Class BD_PlasmaTrail : Flare_General
{
Default {
	+FORCEXYBILLBOARD
	alpha 0.5;
	scale 0.07;
	}
states
	{
	Spawn:
		TNT1 A 2 nodelay;
		LENB A 0 {
			if (target) {
				let pls = BD_Plasmaball(target);
				if (pls.pcolor == "green")
					sprite = GetSpriteIndex("LENG");
				else if (pls.pcolor == "red")
					sprite = GetSpriteIndex("LENR");
				else if (pls.pcolor == "yellow")
					sprite = GetSpriteIndex("LENY");
				}
			}
		#### A 1 bright {
			A_FadeOut(0.15);
			scale*=0.9;
			}
		wait;
	}
}

