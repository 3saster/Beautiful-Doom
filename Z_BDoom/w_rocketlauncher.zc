		RORT A 1 {
			let ws = player.FindPSprite (-3);
			ws.sprite = GEtSpriteIndex("RORT");
			if (countinv("RLCLip") > 2)
				ws.frame = 0;
			else if (countinv("RLCLip") > 1)
				ws.frame = 1;
			else
