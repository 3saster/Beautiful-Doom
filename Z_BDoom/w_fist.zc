//******
// FIST
//******

Class BD_Fist : BDoomWeapon {
	bool speedup;
	protected double dmgmul;
	protected double wzoom;
	int fcombo; // total # of light hits; reset by Light Finisher, Uppercut and Kick
	int lcombo; // # of light hits IN A ROW (at 5th goes to Light Finisher); reset by any finisher
	int tcombo; // total length of combo (total # of all hits that connected with an enemy). Increased by puffs (can't be increased by swinging at air, in contrast to others)
	protected int hurtchance; // % chance of FORCEPAINing the enemy with light punches (increased with tcombo, clamped at 15-85%)
	bool bpunch; //(with Berserk) used left punch?
	int targetdistance;
	property BerserkMultiplier : dmgmul;
	property zoom : wzoom;
	Default {
		BD_Fist.BerserkMultiplier 1;
		BD_Fist.zoom 1;
		weapon.selectionorder 370;
		+WEAPON.NOALERT
		weapon.slotnumber 1;
		weapon.slotpriority 0;
		Weapon.Kickback 100;
		Obituary "$OB_MPFIST";
		Tag "$TAG_FIST";
		+WEAPON.WIMPY_WEAPON
		+WEAPON.MELEEWEAPON
	}
	override void DoEffect() {
		Super.DoEffect();
		If (!Owner)
			return;
		if(bdoom_weapons == 2) {
			//console.printf("hurt chance: %d",hurtchance);
			owner.player.cheats |= CF_INTERPVIEW; //force mouse smoothing to avoid screwy camera when A_CameraSway is used
			bNOAUTOFIRE = true;
			bWIMPY_WEAPON = false;
		}
		else {
			bNOAUTOFIRE = false;
			bWIMPY_WEAPON = true;
		}
		//Console.Printf("tcombo %d",tcombo);
		if (bdoom_weapons != 2 || owner.player.readyweapon != self) {
			fcombo = 0;
			lcombo = 0;
			tcombo = 0;
			hurtchance = 0;
		}
	}

	states {
		Select:
			TNT1 A 0 {
				if (bdoom_weapons == 2)
					return ResolveState ("Select.Modern");
				else if (bdoom_weapons == 1)
					return ResolveState ("Select.Enhanced");
				A_WeaponOffset(35,60,WOF_INTERPOLATE);
				return ResolveState (null);
			}
			FIS0 AAAAAA 1 {
				A_WeaponOffset(-5,-5,WOF_ADD);
				A_WeaponReady(WRF_NOFIRE|WRF_NOBOB);
			}
			goto ready;
		Deselect:
			TNT1 A 0 {
				A_ClearOverlays(2,3);
				speed = default.speed;	
				if (bdoom_weapons == 2)
					return ResolveState ("Deselect.Modern");
				if (bdoom_weapons == 1)
					return ResolveState ("Deselect.Enhanced");
				return ResolveState (null);
			}
			FIS0 A 1 A_Lower;
			wait;
		Ready:
			TNT1 A 0 {
				if (bdoom_weapons == 2)
					return ResolveState ("Ready.Modern");
				A_ClearOverlays(2,3);
				speed = default.speed;	
				if (bdoom_weapons == 1)
					return ResolveState ("Ready.Enhanced");
				return ResolveState (null);
			}
			FIS0 A 1 A_WeaponReady(WRF_NOSECONDARY);
			loop;
		Fire: //pre-fire 4 tics, fire 13 tics, refire 5 tics
			FIS0 A 1 {
				if (bdoom_weapons == 2)
					return ResolveState ("Fire.Modern");
				else if (bdoom_weapons == 1)
					return ResolveState ("Fire.Enhanced");
				A_AlertMonsters();
				if (FindInventory("PowerStrength"))
					return ResolveState ("FireStrong");
				return ResolveState (null);
			}
			FI10 BCD 1;
			FIS0 E 3 A_CustomPunch(2*random(1,10), TRUE,0, "FistPuff_Vanilla");
			FIS0 FGHIJ 2;
			TNT1 A 0 A_Refire;
		FireEnd:
			TNT0 A 0 A_Weaponoffset(40,64);
			FIS0 AAAA 1 {
				A_WeaponReady(WRF_NOFIRE|WRF_NOBOB);
				A_WeaponOffset(-10,-8,WOF_ADD);
			}
			goto ready;
		Hold:
			TNT1 A 1 A_jumpifinventory("PowerStrength",1,"HoldStrong");
			FIS0 BCD 1;
			FIS0 E 3 A_CustomPunch(2*random(1,10), TRUE,0, "FistPuff_Vanilla");
			FIS0 FGHIJ 2;
			TNT1 A 0 A_Refire;
			goto FireEnd;
		FireStrong:
			FIS0 A 1;
			FI10 BCD 1;
			FIS0 E 3 A_CustomPunch(20*random(1,10), TRUE,0, "FistPuffStrong");
			FIS0 EEEE 1 A_WeaponOffset(frandom(-1.3,1.3),frandom(0,1.5),WOF_ADD);
			TNT1 A 0 A_WeaponOffset(0,32,WOF_INTERPOLATE);
			FIS0 FGHIJJ 1;
			TNT1 A 0 A_Refire("HoldStrong");
			goto FireEnd;
		HoldStrong:
			TNT1 A 1;
			FIS0 BCD 1;
			FIS0 E 3 A_CustomPunch(20*random(1,10), TRUE,0, "FistPuffStrong");
			FIS0 EEEE 1 A_WeaponOffset(frandom(-1.3,1.3),frandom(0,1.5),WOF_ADD);
			TNT1 A 0 A_WeaponOffset(0,32,WOF_INTERPOLATE);
			FIS0 FGHIJJ 1;
			TNT1 A 0 A_Refire("HoldStrong");
			goto FireEnd;

		Select.Enhanced:
			TNT0 A 0 A_Weaponoffset(-40,64);
			FIST AAAA 1 {
				A_WeaponReady(WRF_NOFIRE|WRF_NOBOB);
				A_WeaponOffset(10,-8,WOF_ADD);
			}
			goto ready;
		Deselect.Enhanced:
			FIST A 1 A_Lower(12);
			loop;
		Ready.Enhanced:
			FIST A 1 A_WeaponReady;
			goto ready;
		Fire.Enhanced:
			FIST A 1 {			
				if (FindInventory("PowerStrength"))
					return ResolveState ("FireStrong.Enhanced");
				return ResolveState (null);
			}
			TNT1 A 0 A_playsound("Mweapons/fist/swing");
			FIS1 BCD 1;
			FIST E 1 A_CustomPunch(2*random(1,10), TRUE,0, "FistPuff");
			FIST FGHIJ 2;
			TNT1 A 0 A_Refire("Hold.Enhanced");
		FireEnd.Enhanced:
			TNT0 A 0 A_Weaponoffset(-40,64);
			FIST AAAA 1 {
				A_WeaponReady(WRF_NOFIRE|WRF_NOBOB);
				A_WeaponOffset(10,-8,WOF_ADD);
			}
			goto ready.Enhanced;
		Hold.Enhanced:
			TNT1 A 1 {			
				if (FindInventory("PowerStrength"))
					return ResolveState ("HoldStrong.Enhanced");
				return ResolveState (null);
			}
			TNT1 A 0 A_playsound("Mweapons/fist/swing");
			FIST BCD 1;
			FIST E 1 A_CustomPunch(2*random(1,10), TRUE,0, "FistPuff");
			FIST FGHIJ 2;
			TNT1 A 0 A_Refire("Hold.Enhanced");
			goto FireEnd.Enhanced;
		FireStrong.Enhanced:
			FIST A  1;
			TNT1 A 0 A_playsound("Mweapons/fist/heavyswing");
			FIS1 BCD 1;
			FIST E 1 A_CustomPunch(20*random(1,10), TRUE,0, "FistPuffStrong");
			FIST EEEE 1 A_WeaponOffset(frandom(-1.3,1.3),frandom(0,1.5),WOF_ADD);
			TNT1 A 0 A_WeaponOffset(0,32,WOF_INTERPOLATE);
			FIST FGHIJJ 1;
			TNT1 A 0 A_Refire("HoldStrong.Enhanced");
			goto FireEnd.Enhanced;
		HoldStrong.Enhanced:
			TNT1 A 1;
			TNT1 A 0 A_playsound("Mweapons/fist/heavyswing");
			FIST BCD 1;
			FIST E 1 A_CustomPunch(20*random(1,10), TRUE,0, "FistPuffStrong");
			FIST EEEE 1 A_WeaponOffset(frandom(-1.3,1.3),frandom(0,1.5),WOF_ADD);
			TNT1 A 0 A_WeaponOffset(0,32,WOF_INTERPOLATE);
			FIST FGHIJJ 1;
			TNT1 A 0 A_Refire("HoldStrong.Enhanced");
			goto FireEnd.Enhanced;
		AltFire:
			TNT1 A 0 A_JumpIf(bdoom_weapons == 2, "AltFire.Modern");
			KICF AB 1;
		AltHold:
			TNT1 A 0 A_jumpifinventory("PowerStrength",1,"AltHoldStrong");
			KICK AB 1;
			TNT1 A 0 {
				if (player.OnGround)
					speed = default.speed*0.2;
				A_playsound("weapons/kick/swing");
			}
			KICK CD 1;
			TNT1 A 0 A_Recoil(-2);
			KICK EF 1;
			KICK G 3 A_CustomPunch(3*random(5,12),TRUE,CPF_NOTURN,"KickPuff",72);
			KICK HD 2;
			KICK CBA 3;
			TNT1 A 2 { 
				speed = default.speed; 
			}
			TNT1 A 0 A_ReFire("AltHold");
			KICF BA 2;
			goto ready;
		AltHoldStrong:
			KICK AB 1;
			TNT1 A 0 { 
				speed = default.speed *0.5;
				A_playsound("weapons/kick/swing");
			}
			KICK CD 1;
			TNT1 A 0 A_Recoil(-5);
			KICK EF 1;
			KICK G 3 A_CustomPunch(30*random(3,10),TRUE,CPF_NOTURN,"KickPuffStrong",80);
			KICK HD 2;
			TNT1 A 0 { speed = default.speed; }
			KICK CBA 3;
			TNT1 A 0 A_ReFire("AltHoldStrong");
			KICF BA 2;
			goto ready;

	//modern
		Select.Modern:
			TNT1 A 0 {
				A_WeaponOffset(0,42);
				A_PLaysound("mweapons/fist/wear");
			}
			NUKW ABCD 1 {
				A_WeaponOffset(0,-1,WOF_ADD);
				A_WeaponReady(WRF_NOFIRE|WRF_NOBOB);
			}
			NUKW EFG 2 {
				A_WeaponOffset(0,-1,WOF_ADD);
				A_WeaponReady(WRF_NOFIRE|WRF_NOBOB);
			}
			NUKW HIJ 2 {
				A_WeaponOffset(0,-1,WOF_ADD);
				A_WeaponReady(WRF_NOBOB);
			}
			goto ready;
		Deselect.Modern:
			NUKW J 1 A_Lower(12);
			loop;
		Ready.Modern:
			TNT1 A 0 {
				A_ClearRefire();
				A_ClearOverlays(2,3);
				A_Overlay(2,"Ready.Right");
				A_OverlayFlags(2,PSPF_ADDWEAPON,false);
				A_OverlayFlags(2,PSPF_ADDBOB,false);
				A_OverlayOffset(2,0,32);
				A_WeaponOffset(0,32,WOF_INTERPOLATE);
			}
			NUKL AAAA 2 {
				if (FindInventory("Modernberserk_Regen"))
					A_SetTics(4);
				A_WeaponReady(WRF_ALLOWUSER1|WRF_NOBOB);
				A_WeaponOffset(0.09,-0.25,WOF_ADD);
				A_OverlayOffset(2,-0.09,-0.25,WOF_ADD);
				if (vel.length() > 3) {
					if (invoker.speedup) {
						A_SetTics(0);
						invoker.speedup = false;
					}
					else {
						A_SetTics(1);
						invoker.speedup = true;
					}
				}			
				if (FindInventory("Modernberserk_Regen")) {
					A_WeaponOffset(0.3*randompick(-1,1),0.3*randompick(-1,1),WOF_ADD);
					A_OverlayOffset(2,0.3*randompick(-1,1),0.3*randompick(-1,1),WOF_ADD);
				}
			}
			TNT1 A 0 {
				invoker.fcombo = 0;	
				invoker.lcombo = 0;	
				invoker.tcombo = 0;
				}
			NUKL AAAAAAAAAAAA 2 {
				A_WeaponReady(WRF_ALLOWUSER1|WRF_NOBOB);
				A_WeaponOffset(0.09,-0.25,WOF_ADD);
				A_OverlayOffset(2,-0.09,-0.25,WOF_ADD);
				if (vel.length() > 3) {
					if (invoker.speedup) {
						A_SetTics(0);
						invoker.speedup = false;
					}
					else {
						A_SetTics(1);
						invoker.speedup = true;
					}
				}
				if (FindInventory("Modernberserk_Regen")) { //make hands jitter additionally if Berserk is active
					A_WeaponOffset(0.3*randompick(-1,1),0.3*randompick(-1,1),WOF_ADD);
					A_OverlayOffset(2,0.3*randompick(-1,1),0.3*randompick(-1,1),WOF_ADD);
				}
			}
			NUKL AAAAAAAAAAAAAAAA 4 {
				A_WeaponReady(WRF_ALLOWUSER1|WRF_NOBOB);
				A_WeaponOffset(-0.09,0.25,WOF_ADD);
				A_OverlayOffset(2,0.09,0.25,WOF_ADD);
				if (vel.length() > 3) {
					if (invoker.speedup) {
						A_SetTics(0);
						invoker.speedup = false;
					}
					else {
						A_SetTics(1);
						invoker.speedup = true;
					}
				}
				if (FindInventory("Modernberserk_Regen")) {
					A_WeaponOffset(0.3*randompick(-1,1),0.3*randompick(-1,1),WOF_ADD);
					A_OverlayOffset(2,0.3*randompick(-1,1),0.3*randompick(-1,1),WOF_ADD);
				}
			}
			TNT1 A 0 {
				if (bdoom_weapons != 2)
					return ResolveState("Ready");
				return ResolveState(null);
			}
			goto ready.modern+1;
		Ready.Left:
			NUKL A 1;
			wait;
		Ready.Right:
			NUKR A 1;
			wait;
		Fire.Modern: //increases all counters
			TNT1 A 0 {
				A_ClearRefire();
				speed = default.speed;
				A_ClearOverlays(2,3);
				A_WeaponOffset(0,32,WOF_INTERPOLATE);
				invoker.fcombo++;
				invoker.lcombo++;
				invoker.hurtchance = clamp(invoker.tcombo * 8, 10,85);
				if (invoker.lcombo >= 5 && !FindInventory("ModernBerserk_Regen"))
					return ResolveState("LightFinisher");
				A_Overlay(2,"Ready.Right");
				A_OverlayOffset(2,0,0,WOF_INTERPOLATE);
				A_PlaySound("Mweapons/fist/swing",5);
				if (FindInventory("ModernBerserk_Regen"))
					A_CameraSway(-2,0,5);
				else
					A_CameraSway(-1.6,0,5);
				return ResolveState(null);
			}
			NUKL ABCD 1 A_OverlayOffset(2,3.5,3.5,WOF_ADD);
			NUKL E 1 {
				A_OverlayOffset(2,2.5,2.5,WOF_ADD);
				if (FindInventory("ModernBerserk_Regen"))
					A_CustomPunch(14*frandom(1.5,4.5), TRUE,0, "ModernFistPuff_Berserk");
				else {
					if (invoker.hurtchance > random(0,100))
						A_CustomPunch(4*frandom(1.5,4.5), TRUE,0, "ModernFistPuff_Pain");
					else
						A_CustomPunch(4*frandom(1.5,4.5), TRUE,0, "ModernFistPuff");
				}
				A_WeaponOffset(frandom(-1.5,1.5),frandom(0,2),WOF_ADD);
			}
			TNT1 A 0 {				
				if (FindInventory("ModernBerserk_Regen"))
					A_CameraSway(2,0,5);
				else
					A_CameraSway(1.6,0,8);
			}
			NUKL F 1 A_OverlayOffset(2,-1.2,-1.2,WOF_ADD);
			NUKL G 1 {
				if (FindInventory("ModernBerserk_Regen"))
					A_WeaponReady(WRF_DISABLESWITCH|WRF_ALLOWUSER1);
				A_OverlayOffset(2,-1.2,-1.2,WOF_ADD);
			}
			NUKL HII 1 {
				A_WeaponReady(WRF_DISABLESWITCH|WRF_ALLOWUSER1);
				A_OverlayOffset(2,-1.2,-1.2,WOF_ADD);
			}
			NUKL JJJAAAAA 1 {
				if (FindInventory("ModernBerserk_Regen") && (player.cmd.buttons & BT_ATTACK) && (player.oldbuttons & BT_ATTACK))
					return ResolveState("Fire.Modern");
				A_WeaponReady(WRF_DISABLESWITCH|WRF_ALLOWUSER1);
				A_OverlayOffset(2,-1.2,-1.2,WOF_ADD);
				return ResolveState(null);
			}
			TNT1 A 0 {
				return ResolveState(null);
				}
			goto ready;
		LightFinisher:
			TNT1 A 0 {
				A_Overlay(2,"Ready.Right");
				A_OverlayOffset(2,0,0,WOF_INTERPOLATE);
				A_PlaySound("Mweapons/fist/heavyswing",5);
				if (FindInventory("ModernBerserk_Regen"))
					A_CameraSway(-2.5,0,5);
				else
					A_CameraSway(-1.9,0,5);
			}
			NUKL ABCD 1 {
				A_OverlayOffset(2,3.5,3.5,WOF_ADD);
			}
			NUKL E 1 {
				invoker.lcombo = 0;
				A_OverlayOffset(2,2.5,2.5,WOF_ADD);
					if (invoker.hurtchance > random(0,100))
						A_CustomPunch(5*frandom(1.7,4.8), TRUE,0, "ModernFistPuff_Pain",68);
					else
						A_CustomPunch(5*frandom(1.7,4.8), TRUE,0, "ModernFistPuff",68);			
				A_WeaponOffset(2,frandom(0,2),WOF_ADD);
			}
			TNT1 A 0 {				
					A_CameraSway(1.9,0,8);
				}
			NUKL EE 1 {
				A_WeaponOffset(2,frandom(0,2),WOF_ADD);
				A_OverlayOffset(2,-1.1,-1.1,WOF_ADD);
			}
			NUKL FFGGHH 1 A_OverlayOffset(2,-1.1,-1.1,WOF_ADD);
			NUKL IIJJAAAA 1 {
				A_WeaponReady(WRF_NOBOB|WRF_NOPRIMARY|WRF_ALLOWUSER1);
				A_OverlayOffset(2,-1.2,-1.2,WOF_ADD);
			}
			goto ready.Modern;
		Altfire.Modern: //resets light punch sequence, keeps total # of light punches, increases total counter
			TNT1 A 0 {
				A_ClearOverlays(2,3);
				A_WeaponOffset(0,32,WOF_INTERPOLATE);
				speed = default.speed;
				invoker.bpunch = false;
				A_Overlay(2,"Ready.Left");
				A_OverlayFlags(2,PSPF_ADDWEAPON,false);
				A_OverlayOffset(2,0,32,WOF_INTERPOLATE);
				if (invoker.fcombo == 1 && invoker.lcombo > 0)
					return ResolveState("HeavyPunch1");
				if (invoker.fcombo == 2 && invoker.lcombo > 0)
					return ResolveState("HeavyPunch2");
				if (invoker.fcombo >= 3 && invoker.lcombo > 0)
					return ResolveState("Uppercut");
				invoker.tcombo = 0;
				return ResolveState(null);
			}
			//if fcombo is 0, perform basic heavy punch but with longer wind-up
			NUKR AAAABBBB 1 {
				A_WeaponOffset(1.2,1.2,WOF_ADD);
			}
		HeavyPunch1:
			TNT1 A 0 {
				if (FindInventory("ModernBerserk_Regen") && (player.cmd.buttons & BT_ALTATTACK) && (player.oldbuttons & BT_ALTATTACK) && invoker.wzoom > 0.93) {
					invoker.dmgmul = Clamp(invoker.dmgmul+0.35,1,3.5);
					//Console.Printf("dmg mul: %f",invoker.dmgmul);
					return ResolveState(null);
				}
				invoker.wzoom = 1;
				A_ZoomFactor(1,ZOOM_NOSCALETURNING);
				return ResolveState("HeavyPunch1Do");
			}
			NUKR BBB 1 {
				//A_OverlayOffset(2,-0.3,0.1,WOF_ADD);
				A_WeaponOffset(0.22,0.22,WOF_ADD);
				invoker.wzoom = Clamp(invoker.wzoom * 0.997,0.9,1);
				A_ZoomFactor(invoker.wzoom,ZOOM_NOSCALETURNING);
			}
			loop;
		HeavyPunch1Do:
			TNT1 A 0 {
				A_WeaponOffset(0,32);
				if (FindInventory("ModernBerserk_Regen")) {
					A_CameraSway(2.1,0,5);
					A_PlaySound("Mweapons/fist/heavyswing",5);
				}
				else {
					A_CameraSway(1.7,0,4);
					A_PlaySound("Mweapons/fist/swing",5);
				}
			}
			NUKR CDE 1 {
				A_Recoil(-0.35);
				A_OverlayOffset(2,-5.5,6.3,WOF_ADD);
			}
			NUKR F 1 {
				invoker.lcombo = 0;
				if (FindInventory("Modernberserk_Regen"))
					A_Recoil(-1.5 * invoker.dmgmul);
				else
					A_Recoil(-0.5);
				A_OverlayOffset(2,-5.5,6.3,WOF_ADD);
				if (FindInventory("Modernberserk_Regen")) {
					A_CustomPunch(10*frandom(4.5,5)*invoker.dmgmul, TRUE,0, "ModernFistPuffHeavy_Berserk",72);
					invoker.dmgmul = invoker.default.dmgmul;
				}
				else {
					if (invoker.hurtchance > random(0,100))
						A_CustomPunch(6*frandom(2.5,5), TRUE,0, "ModernFistPuff_Pain",72);
					else
						A_CustomPunch(6*frandom(2.5,5), TRUE,0, "ModernFistPuff",72);
				}
				A_WeaponOffset(frandom(-2,2),frandom(0,2.5),WOF_ADD);
			}
			TNT1 A 0 {				
				if (FindInventory("ModernBerserk_Regen"))
					A_CameraSway(-2.1,0,5);
				else
					A_CameraSway(-1.7,0,4);
			}
			NUKR G 1 {
				if (FindInventory("ModernBerserk_Regen") && invoker.tcombo > 3)
					A_WeaponReady(WRF_DISABLESWITCH|WRF_NOSECONDARY|WRF_NOBOB|WRF_ALLOWUSER1);
				A_OverlayOffset(2,2,-2.29,WOF_ADD);
			}
			NUKR H 1 {
				if (FindInventory("ModernBerserk_Regen") && invoker.tcombo > 2)
					A_WeaponReady(WRF_DISABLESWITCH|WRF_NOSECONDARY|WRF_NOBOB|WRF_ALLOWUSER1);
				A_OverlayOffset(2,2,-2.29,WOF_ADD);
			}
			NUKR IJK 1 {
				if (FindInventory("ModernBerserk_Regen"))
					A_WeaponReady(WRF_DISABLESWITCH|WRF_NOSECONDARY|WRF_NOBOB|WRF_ALLOWUSER1);
				A_OverlayOffset(2,2,-2.29,WOF_ADD);
			}
			NUKR LLMM 1 {
				A_WeaponReady(WRF_DISABLESWITCH|WRF_NOSECONDARY|WRF_NOBOB|WRF_ALLOWUSER1);
				A_OverlayOffset(2,2,-2.29,WOF_ADD);
			}
			TNT1 AA 1 {
				A_WeaponReady(WRF_DISABLESWITCH|WRF_NOSECONDARY|WRF_NOBOB|WRF_ALLOWUSER1);
				A_OverlayOffset(2,2,-2.29,WOF_ADD);
			}
