Class BD_OverlayControl : CustomInventory {	
	private double aalpha;
	Default	{
		+INVENTORY.UNDROPPABLE
		+INVENTORY.UNTOSSABLE
		+INVENTORY.UNCLEARABLE
		+INVENTORY.AUTOACTIVATE
		inventory.maxamount 1;
	}
	states {
		Use:
			TNT1 A 1 {
				A_Overlay(-999,"OverlayControl");
			}
			wait;
		OverlayControl:
			TNT1 A 1 {
				if (FindInventory("ModernBerserk_Regen")) {
					let psp = player.FindPSprite(PSP_Weapon);
					let bers = player.FindPSprite(500);
					if(!psp || bdoom_weapons != 2 || bers) // Player dead or overlay already active
						return ResolveState(null);
					A_Overlay(500,"BerserkOverlay",true);
					A_OverlayFlags(500,PSPF_ALPHA|PSPF_FORCEALPHA,true);
					A_OverlayFlags(500,PSPF_ADDWEAPON|PSPF_ADDBOB,false);					
					invoker.aalpha = 0.1;
				}
				return ResolveState(null);
			}
			loop;
		BerserkOverlay:
			/*TNT1 A 0 {
				//console.printf("berserk overlay");
				A_OverlayFlags(OverlayID(),PSPF_ALPHA|PSPF_FORCEALPHA,true);
				A_OverlayFlags(OverlayID(),PSPF_ADDWEAPON|PSPF_ADDBOB,false);
			}*/
			BDOL BBBBBBBBBBBBBBBBBBBB 1 {
				invoker.aalpha = clamp(invoker.aalpha+0.02,0.1,0.5);
				A_OverlayAlpha(OverlayID(),invoker.aalpha);
			}
			BDOL BBBBBBBBBBBBBBBBBBBB 1 {
				invoker.aalpha = clamp(invoker.aalpha-0.02,0.1,0.5);
				A_OverlayAlpha(OverlayID(),invoker.aalpha);
			}
			TNT1 A 0 {
				if (!FindInventory("ModernBerserk_Regen"))
					return ResolveState("BerserkEnd");
				return ResolveState(null);
			}
			loop;
		BerserkEnd:
			BDOL BBBBBBBBBB 1 {
				invoker.aalpha = clamp(invoker.aalpha-0.02,0,0.5);
				A_OverlayAlpha(OverlayID(),invoker.aalpha);
			}
			stop;
	}
}

Class BD_Berserk : CustomInventory  {	
	Default	{
		+COUNTITEM
		+INVENTORY.ALWAYSPICKUP
		+INVENTORY.ISHEALTH
		Inventory.PickupMessage "$GOTBERSERK";
		inventory.pickupsound "pickups/berserk";
	}
	States {
		Spawn:
			PSTR A -1;
			Stop;
		Pickup:
			TNT1 A 0 {
				if (bdoom_weapons == 2) {
					A_GiveInventory("Modernberserk_Regen");
					A_GiveInventory("Modernberserk_Speed");
					A_GiveInventory("Modernberserk_Protection");
				}
				else 
					A_GiveInventory("PowerStrength");
				HealThing(100, 0);
				if (!FindInventory("BD_Fist"))
					A_GiveInventory("BD_Fist");
				if (player.readyweapon != Weapon(FindInventory("BD_Fist")))
					player.pendingweapon = Weapon(FindInventory("BD_Fist"));
			}
			stop;
	}
}

